<Page x:Class="WordExelMail.ExcelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WordExelMail"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExcelPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="43*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="name_place" VerticalAlignment="Center" Height="18"/>
        <Button x:Name="add_but" HorizontalAlignment="Right" Content="Добавить столбец" Click="add_but_Click"></Button>
        <DataGrid x:Name="main_data" Background="Aqua" Grid.Row="1"></DataGrid>
        <Button Grid.Row="1"  VerticalAlignment="Bottom" Content="Сохранить" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="14" Click="Button_Click" Height="21"></Button>
    </Grid>
</Page>
